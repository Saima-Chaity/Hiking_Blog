<% include ../partials/header %>
    <div class="imgContainer">
            <h1 id= "header">TRAVELLING</h1>
            <hr>
            <p class="quote">It leaves you speechless, then turns you into a storyteller</p>
    </div>

<div class="row">
    <% for(var i=0; i<campgrounds.length; i++){ %>
        <div class="col-lg-4">
            <div class="thumbnail">
                <img src= "<%= campgrounds[i].Image %>">
                <h3><%= campgrounds[i].Name %></h3>
                <p><%- campgrounds[i].Description.substring(0, 100) %>...</p>
                <p>
                    <button><a href="/campground/<%= campgrounds[i]._id %>">Read More</a></button>
                </p>
            </div>
        </div>
    <% } %>
</div>
        
<% include ../partials/footer %>